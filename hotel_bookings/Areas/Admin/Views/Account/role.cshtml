@model hotel_bookings.Models.RoleViewModel

@{
    ViewBag.Title = "role";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card">
        <div class="#" style="display: inline-flex;justify-content: flex-end;">
            <div id="custom-search" class="top-search-bar">
                <input class="form-control" type="text" placeholder="Search..">
            </div>
            <div>
                <a href="@Url.Action("AddRoom", "Room")" class="badge badge-info" style="margin-top: 16px; margin-right: 22px; font-size: 18px;">Thêm <i class="fa-solid fa-plus"></i></a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr style="background-color: #221f50; ">
                        <th>STT</th>
                        <th>Tài khoản</th>
                        <th>Quyền</th>
                        <th>Chức năng</th>

                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.admins.Count; i++)
                    {
                        <tr>
                            <td>@Model.admins[i].RowNumber</td>
                            <td>@Model.admins[i].username</td>
                            <td>@Model.roles[i].name</td>
                            <td>
                                <a href="@Url.Action("DeleteRoom", "Room",new { id = @Model.admins[i].id })"><i class="fa-regular fa-trash-can"></i></a>
                                <a href="@Url.Action("UpdateRoom", "Room",new { id = @Model.admins[i].id })"><i class="fa-regular fa-pen-to-square"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

