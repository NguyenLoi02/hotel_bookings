
@model PagedList.IPagedList<hotel_bookings.Models.room>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card">
        <div class="#" style="display: inline-flex;justify-content: flex-end;">
            <div id="custom-search" class="top-search-bar">
                <input class="form-control" type="text" placeholder="Search..">
            </div>
            <div>
                <a href="@Url.Action("AddRoom", "Room")" class="badge badge-info" style="margin-top: 16px; margin-right: 22px; font-size: 18px;">Thêm <i class="fa-solid fa-plus"></i></a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr style="background-color: #221f50; ">
                        <th>STT</th>
                        <th>Ảnh phòng</th>
                        <th>Mã phòng</th>
                        <th>Tên phòng</th>
                        <th>Số người</th>
                        <th>Giá phòng</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RowNumber</td>
                            <td><img src="~/Assets/img/room/@item.avatar" alt="" height="100" width="100"></td>
                            <td>@item.id</td>
                            <td>@item.name</td>
                            <td>
                                <div class="fst">
                                    <div>Người lớn: @item.adult</div>
                                    <div>Trẻ em: @item.children</div>
                                </div>
                            </td>
                            <td>@item.price</td>
                            <td>@item.quantity</td>
                            @if (item.status == 0)
                            {
                                <td><a href="#" class="btn btn-rounded btn-success" style=" font-size: 14px;">Busy</a></td>
                            }
                            @if (item.status == 1)
                            {
                                <td><a href="#" class="btn btn-rounded btn-danger" style=" font-size: 14px;">Busy</a></td>
                            }
                            <td>
                                <a href="@Url.Action("DeleteRoom", "Room",new { id = item.id })"><i class="fa-regular fa-trash-can"></i></a>
                                <a href="@Url.Action("UpdateRoom", "Room",new { id = item.id })"><i class="fa-regular fa-pen-to-square"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="pagination-container">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
    </div>
</div>

