@model hotel_bookings.Models.feature

@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card">
       
        <div class="card-body">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <strong>Tên công năng</strong>
                            <input type="text" name="name" class="form-control" value="@Model.name">
                        </div>


                        <div class="form-group">
                            <strong>Icon</strong>
                            <input type="text" name="icon" class="form-control" value="@Model.icon">
                        </div>


                    </div>
                </div>
                <a href="@Url.Action("Index", "Feature")" class="btn btn-light float-right" style="margin: 8px 0px;">Hủy</a>
                <button type="submit" class="btn btn-success mt-2 float-right" style=" margin: 2px 10px; ">Lưu</button>
            </form>
        </div>
    </div>
</div>
