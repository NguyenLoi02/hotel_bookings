@model PagedList.IPagedList<hotel_bookings.Models.user>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card">
        <div class="container">
            <div class="row">
                <div id="custom-search" class="col-sm-8" >
                    <form class="row" method="post"style="padding: 0 6px;">
                        <div class="form-group col-sm-6">
                            <input type="text" class="form-control" name="sdt" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="col-sm-6">
                            <div class="btn-group" role="group">
                                <button class="btn btn-dark" type="submit">Tìm kiếm</button>
                                <a href="@Url.Action("Index", "Customer")" class="btn btn-dark">Reset</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-4">
                    <a href="@Url.Action("AddRoom", "Room")" class="btn btn-info" style="margin-top: 10px; font-size: 18px; float: right; margin-right: 7px;">Thêm <i class="fa-solid fa-plus"></i></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table">
                <thead>
                    <tr style="background-color: #221f50; ">
                        <th>STT</th>
                        <th>Họ đệm</th>
                        <th>Tên</th>
                        <th>Số điện thoại</th>
                        <th>Ngày sinh</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RowNumber</td>
                            <td>@item.last_name</td>
                            <td>@item.first_name</td>
                            <td>@item.phonenum</td>
                            <td>@item.dob</td>
                            <td>@item.email</td>
                            <td>@item.address</td>
                            <td>
                                <a href="@Url.Action("DeleteRoom", "Room",new { id = item.id })"><i class="fa-regular fa-trash-can"></i></a>
                                <a href="@Url.Action("UpdateRoom", "Room",new { id = item.id })"><i class="fa-regular fa-pen-to-square"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
            <div class="container mt-5">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>


