<section class="hp-room-section">
    <div class="container-fluid">
        <div class="hp-room-items position-relative">
            <div>
                <button class="scroll-button scroll-button-left"><i class="arrow_left"></i></button>
                <button class="scroll-button scroll-button-right"><i class="arrow_right"></i></button>
            </div>
            <div class="scrolling-wrapper row flex-row flex-nowrap position-relative">
                @if (Model.room_styles != null && Model.room_styles.Any())
                {
                    foreach (var item in Model.room_styles)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="hp-room-item set-bg" data-setbg="../Assets/img/room/room-1.jpg">
                                <div class="hr-text">
                                    <h3>@item.name</h3>

                                    <a href="@Url.Action("Index", "RoomStyle")" class="primary-btn">Xem ngay</a>
                                </div>
                            </div>
                        </div>
                    }

                }
                </div>
        </div>
    </div>
</section>
