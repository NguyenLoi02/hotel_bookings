@model hotel_bookings.Models.RoomStyleAndNewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .scrolling-wrapper {
        overflow-x: auto;
        display: flex;
        flex-wrap: nowrap;
        scroll-behavior: smooth; /* Để cuộn mượt hơn */
        position: relative;
    }

        .scrolling-wrapper::-webkit-scrollbar {
            display: none; /* Ẩn thanh cuộn mặc định */
        }

    .scroll-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        cursor: pointer;
        z-index: 1000;
        font-size: 34px;
        padding: 15px;
        margin: 0px 26px;
        border-radius: 35px;
    }

    .scroll-button-left {
        left: 0;
    }

    .scroll-button-right {
        right: 0;
    }

    .hp-room-items .hp-room-item .hr-text {
        position: absolute;
        left: 45px;
        right: 25px;
        bottom: 89px;
    }

    a:hover {
        color: #dfa974;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const scrollWrapper = document.querySelector('.scrolling-wrapper');
        const scrollAmount = scrollWrapper.clientWidth; // Cuộn đúng bằng chiều rộng của khung nhìn

        document.querySelector('.scroll-button-left').addEventListener('click', function () {
            scrollWrapper.scrollBy({
                left: -scrollAmount,
                behavior: 'smooth'
            });
        });

        document.querySelector('.scroll-button-right').addEventListener('click', function () {
            scrollWrapper.scrollBy({
                left: scrollAmount,
                behavior: 'smooth'
            });
        });
    });
</script>
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>HL <br /> Khách sạn sang trọng</h1>
                    <p>
                        Dưới đây là trang web đặt phòng khách sạn tốt nhất, bao gồm các đề xuất về du lịch quốc tế và tìm phòng khách sạn giá rẻ
                    </p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Đặt phòng ngay</h3>
                    <form action="#">
