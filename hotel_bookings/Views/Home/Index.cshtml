                        <div class="blog-item set-bg" data-setbg="../Assets/img/news/@item.image">
                            <div class="bi-text">
                                <span class="b-tag">Tin mới</span>
                                <h4><a href="#">@item.title</a></h4>
                                <div class="b-time"><i class="icon_clock_alt"></i>@item.date_news</div>
                            </div>
                        </div>
                    </div>


                }
            }
        </div>

    </div>
</section>

