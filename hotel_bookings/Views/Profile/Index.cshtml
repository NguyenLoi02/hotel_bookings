@model hotel_bookings.Models.user

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Thông tin cá nhân</h2>
                    <div class="bt-option">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 60px; margin-bottom: 266px;">
    <div class="row">
        <div class="col-md-4">
            <img src="../Assets/img/avatar.jpg" alt="Avatar" class="rounded-circle mb-3 " width="250" height="250">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p><strong>Họ và tên:</strong>@Model.first_name</p>
                <p><strong>Email:</strong> @Model.email</p>
                <p><strong>Số điện thoại:</strong> @Model.phonenum</p>
                <p><strong>Địa chỉ:</strong> @Model.address</p>


                <button type="submit" class="btn btn-primary btn-block">Lưu thông tin</button>
            </div>
        </div>
    </div>
</div>



