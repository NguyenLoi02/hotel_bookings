<!-- Page Preloder -->
@{

    string email = ViewBag.Email;


}
<div id="preloder">
    <div class="loader"></div>
</div>
<header class="header-section">
    <div class="top-nav">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="tn-left">
                        <li><i class="fa fa-envelope"></i> @email</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="tn-right">
                        <div class="top-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                        @if (Session["user"] == null)
                        {
                            <a href="@Url.Action("Login", "Access")" class="bk-btn">Đăng nhập</a>
                        }

                        @if (Session["user"] != null)
                        {
                            <div class="language-option">
                                <img src="~/Assets/img/avatar-clone.jpg" />
                                <span>@Session["name"] <i class="fa fa-angle-down"></i></span>
                                <div class="flag-dropdown">
                                    <ul>
                                        <li><a href="@Url.Action("Index", "Profile")">Hồ sơ</a></li>
                                        <li style=" margin-top: 10px;"><a href="@Url.Action("Logout", "Access")">Đăng xuất</a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-item">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a href="./index.html">
                            <img src="../Assets/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu">
                            <ul>
                                <li class="active"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                                <li><a href="@Url.Action("Index", "Room")">Phòng</a></li>

                                <li><a href="@Url.Action("Index", "News")">Tin tức</a></li>
                                <li><a href="@Url.Action("Index", "Contact")">Liên Hệ</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>